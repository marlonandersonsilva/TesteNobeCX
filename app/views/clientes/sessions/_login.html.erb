<%= form_for('cliente', id: 'login-nav', class:'form', url: cliente_session_path) do |f| %>
    <div  class="form-group">
      <%= f.label :email, 'E-mail' %><br />
      <%= f.email_field :email, class:'form-control', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Senha' %><br />
      <%= f.password_field :password, class:'form-control', autocomplete: "off" %>
    </div>

    <% if Devise.mappings[:cliente].rememberable? -%>
        <div  class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me , 'Lembrar-me?'%>
        </div>
    <% end -%>

    <div class="form-group">
      <%= f.submit "Entrar",class: "btn btn-primary btn-block" %>
    </div>
    <div class="form-group">
      <%= link_to "Esqueceu sua senha?", new_password_path('cliente') %>
    </div>
<% end %>